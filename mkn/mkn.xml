<maiken>
	<project>
		<name>phautop</name>		
		<version>master</version>
	</project>	
	<dependencies>
		<dependency>
			<name>kul.unix</name>
			<version>master</version>
			<remote scm="git">http://www.github.com/Dekken/kul.unix.git</remote>
		</dependency>
	</dependencies>
	<includes>
		<include>./inc</include>
	</includes>
	<profiles>
		<!-- Name can anything, must be unique, is mandatory -->
		<profile os="nix">  
			<includes>
				<include>./inc</include>
			</includes>
			<dependencies>
				<dependency>
					<name>kul.nix</name>
					<version>master</version>
					<remote scm="git">http://www.github.com/Dekken/kul.nix.git</remote>
				</dependency>
			</dependencies>
			<build type="lib" mode="static" main="./main.cpp"> 
				<files>
					<file type="cpp">
						<args>
							<arg>-std=c++0x</arg><arg>-D__GXX_EXPERIMENTAL_CXX0X__</arg>
							<arg>-Wall</arg><arg>-fmessage-length=0</arg>
							<arg>-O3</arg><arg>-g0</arg>
						</args>
					</file>
				</files>
			</build>
		</profile>

		<profile os="win">  
			<dependencies>
				<dependency>
					<name>kul.win</name>
					<version>master</version>			
					<remote scm="git">http://www.github.com/Dekken/kul.win.git</remote>
				</dependency>
			</dependencies>			
			<includes>
				<include>./inc</include>
			</includes>
			<build type="exe" mode="static" main="main.cpp">
				<files>
					<file type="cpp">
						<args><arg>/EHsc</arg></args>
					</file>
				</files>
			</build>
		</profile>

		<profile os="mac">  
			<dependencies>
				<dependency>
					<name>kul.mac</name>
					<version>master</version>
					<profile>release</profile>
					<local>./ext/kul/mac/master</local>
					<remote scm="git">http://www.github.com/Dekken/kul.mac.git</remote>
				</dependency>
			</dependencies>
			<includes>
				<include>./inc</include>
			</includes>
			<build type="exe" mode="static" main="./main.cpp"> 
				<files>
					<file type="cpp">
						<args>
							<arg>-std=c++0x</arg><arg>-D__GXX_EXPERIMENTAL_CXX0X__</arg>
							<arg>-Wall</arg><arg>-fmessage-length=0</arg>
							<arg>-O3</arg><arg>-g0</arg>
						</args>
					</file>
				</files>
			</build>
		</profile>
	</profiles>
</maiken>

