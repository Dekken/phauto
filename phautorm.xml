<phautorm>
	<settings>
		<db-type>mysql</db-type>
	</settings>
	<class name="user" table="users"><!--table="defaults to name" db-type="overrides settings if present"-->
		<field type="bigint"  name="o_id" pk="true" null="false" autoInc="true"/>
		<field type="password" name="pass" null="false"/>
		<field type="varchar" name="fName" null="false"/>
		<field type="varchar" name="sName"/>
		<field type="varchar" name="pEmail" null="false"/>
		<field type="varchar" name="sEmail"/>
		<field type="varchar" name="mobile" null="false"/>
		<field type="boolean" name="valid" null="false"/>
	</class>

	<class name="task" table="tasks"><!--table defaults to name, db-type="overrides settings if present"-->
		<field type="bigint"  name="o_id" pk="true" null="false" autoInc="true"/>
		<field type="password" name="pass" null="false"/>
		<field type="varchar" name="fName" null="false"/>
		<field type="varchar" name="sName"/>
		<field type="varchar" name="pEmail" null="false"/>
		<field type="varchar" name="sEmail"/>
		<field type="varchar" name="mobile" null="false"/>
		<field type="boolean" name="valid" null="false"/>
	</class>
</phautorm>